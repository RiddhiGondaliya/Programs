// second solution
static boolean isPalindrom(String str){
    
    int i =0, j = str.length()-1;
    
   while(i < j){
       
       if(str.charAt(i) != str.charAt(j))
       
       return false;
       i++;
       j--;
   }
    return true;
}
  
}
